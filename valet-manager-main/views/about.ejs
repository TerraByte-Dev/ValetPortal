<%- include('partials/header', { title: 'About' }) %>
<section class="page-header">
  <div>
    <p class="eyebrow">About</p>
    <h2>Team Portal</h2>
    <p class="muted">A clean, mobile-first workflow for shift reporting and team oversight.</p>
  </div>
</section>

<section class="card">
  <h3>Core features</h3>
  <div class="feature-grid">
    <div class="feature-card">
      <h4>Shift reporting</h4>
      <p>Fast, mobile-friendly submissions with cash + digital totals, optional hours, and screenshots.</p>
    </div>
    <div class="feature-card">
      <h4>Admin overview</h4>
      <p>Weekly leaderboards, recent report previews, and instant access to analytics.</p>
    </div>
    <div class="feature-card">
      <h4>Locations & groups</h4>
      <p>Organize teams by role or location with typed confirmation for critical changes.</p>
    </div>
    <div class="feature-card">
      <h4>Valet profiles</h4>
      <p>Optional contact details, LinkedIn, and a list of social links for quick reference.</p>
    </div>
  </div>
</section>

<section class="card">
  <h3>Weekly structure</h3>
  <p class="muted">Weekly reporting starts on Monday at 6:00 AM to capture late Sunday shifts.</p>
</section>

<section class="card">
  <h3>Pricing (demo)</h3>
  <p class="muted">Sample pricing for presentation only. Select a plan to submit a contact email for sales follow-up.</p>
  <% if (pricingError) { %>
    <p class="alert alert-error"><%= pricingError %></p>
  <% } %>
  <% if (pricingMessage) { %>
    <p class="alert alert-success"><%= pricingMessage %></p>
  <% } %>
  <div class="pricing-grid">
    <div class="pricing-card">
      <h4>Starter</h4>
      <p class="price">$29 <span>/ month</span></p>
      <ul class="list">
        <li>Up to 10 users</li>
        <li>3 locations</li>
        <li>Basic analytics</li>
      </ul>
      <div class="btn-row">
        <button type="button" class="btn btn-ghost pricing-select-btn" data-plan="Starter">Select Starter</button>
      </div>
    </div>
    <div class="pricing-card highlighted">
      <h4>Operations</h4>
      <p class="price">$79 <span>/ month</span></p>
      <ul class="list">
        <li>Up to 50 users</li>
        <li>Unlimited locations</li>
        <li>Advanced reporting</li>
      </ul>
      <div class="btn-row">
        <button type="button" class="btn btn-primary pricing-select-btn" data-plan="Operations">Select Operations</button>
      </div>
    </div>
    <div class="pricing-card">
      <h4>Enterprise</h4>
      <p class="price">$149 <span>/ month</span></p>
      <ul class="list">
        <li>Unlimited users</li>
        <li>Dedicated support</li>
        <li>Custom analytics</li>
      </ul>
      <div class="btn-row">
        <button type="button" class="btn btn-ghost pricing-select-btn" data-plan="Enterprise">Select Enterprise</button>
      </div>
    </div>
  </div>
  <form id="pricing-contact-form" action="/about/pricing-interest" method="POST" style="display:none;">
    <input type="hidden" name="plan" id="pricing-plan-input">
    <input type="hidden" name="contact_email" id="pricing-email-input">
  </form>
</section>
<script>
  (function () {
    const buttons = document.querySelectorAll('.pricing-select-btn');
    const form = document.getElementById('pricing-contact-form');
    const planInput = document.getElementById('pricing-plan-input');
    const emailInput = document.getElementById('pricing-email-input');
    if (!buttons.length || !form || !planInput || !emailInput) return;
    buttons.forEach((button) => {
      button.addEventListener('click', () => {
        const plan = button.getAttribute('data-plan') || 'Selected';
        const email = window.prompt(`Enter contact email for ${plan} sales follow-up:`);
        if (!email) return;
        planInput.value = plan;
        emailInput.value = email.trim();
        form.submit();
      });
    });
  })();
</script>
<%- include('partials/footer') %>
